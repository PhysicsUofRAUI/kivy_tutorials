#:kivy 1.0.9

<PongBall>:
    size: 50, 50
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

<PongPaddle>:
    size: 25, 200
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size

<PongPaddleLeft>:
    size: 50, self.parent.height
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size

<PongGame>:
    ball: pong_ball
    player1: player_left
    player2: player_right

    canvas:
        Rectangle:
            pos: self.center_x - 5, 0
            size: 10, self.height

    Label:
        font_size: 70
        center_x: root.width / 4
        top: root.top - 50
        text: str(root.player1.score)

    Label:
        font_size: 70
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: str(root.player2.score)

    Label:
        color: [44, 130, 201, 1]
        font_size: 70
        center_x: root.width * 1 / 2
        top: root.top * 1 / 2
        text: str(root.message)

    PongBall:
        id: pong_ball
        center: self.parent.center

    PongPaddleLeft:
        id: player_left
        x: root.x

    PongPaddle:
        id: player_right
        x: root.width - self.width
        center_y: root.center_y
